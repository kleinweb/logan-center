{
  "name": "kleinweb/logan-center-theme",
  "type": "wordpress-theme",
  "license": "GPL-3.0-or-later",
  "description": "Minimally-functional WordPress theme for the Logan Center for Urban Investigative Reporting",
  "homepage": "https://github.com/kleinweb/logan-center",
  "authors": [
    {
      "name": "Klein College of Media and Communication",
      "email": "kleinweb@temple.edu",
      "homepage": "https://klein.temple.edu"
    }
  ],
  "keywords": [
    "wordpress",
    "wordpress-theme",
    "headless-wordpress",
    "temple-university"
  ],
  "support": {
    "issues": "https://github.com/kleinweb/logan-center/issues"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.7.1"
  },
  "suggest": {
    "log1x/sage-directives": "A collection of useful Blade directives for WordPress and Sage (^1.0).",
    "log1x/sage-svg": "A useful SVG directive for inlining SVG's within Blade views (^1.0)."
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": [
      "phpcs --extensions=php --standard=PSR12 app"
    ],
    "fix": [
      "phpcbf --extensions=php --standard=PSR12 app"
    ]
  },
  "extra": {
    "acorn": {
      "providers": [
        "App\\Providers\\ThemeServiceProvider"
      ]
    }
  }
}
