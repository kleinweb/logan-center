{
  "name": "@kleinweb/logan-center-wordpress-theme",
  "private": true,
  "browserslist": [
    "extends @roots/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "bud dev",
    "build": "bud build",
    "typecheck": "tsc",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint --ext=js,jsx,ts,tsx resources/scripts",
    "lint:css": "stylelint \"resources/**/*.css\"",
    "test": "yarn lint",
    "translate": "yarn translate:pot && yarn translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --include=\"app,resources\"",
    "translate:update": "for filename in ./resources/lang/*.po; do msgmerge -U $filename ./resources/lang/sage.pot; done; rm -f ./resources/lang/*.po~",
    "translate:compile": "yarn translate:mo && yarn translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang"
  },
  "dependencies": {
    "@kleinweb/logan-center__tailwind-config": "*",
    "@wordpress/blocks": "12.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@roots/bud": "6.9.1",
    "@roots/bud-eslint": "^6.9.1",
    "@roots/bud-imagemin": "^6.9.1",
    "@roots/bud-prettier": "^6.9.1",
    "@roots/bud-stylelint": "^6.9.1",
    "@roots/bud-tailwindcss": "^6.9.1",
    "@roots/bud-typescript": "^6.9.1",
    "@roots/eslint-config": "^6.9.1",
    "@roots/sage": "6.9.1",
    "@types/eslint": "^8",
    "@types/webpack-env": "^1.18.0",
    "@types/wordpress__blocks": "^12",
    "babel-loader": "^9.1.2",
    "blade-formatter": "^1.32.7",
    "react": "^18.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0"
  }
}
