{
  "name": "kleinweb/logan-center",
  "type": "project",
  "license": "GPL-3.0-or-later",
  "description": "Logan Center for Urban Investigative Reporting",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Klein College of Media and Communication",
      "email": "kleinweb@temple.edu",
      "homepage": "https://github.com/kleinweb"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "path",
      "url": "../../packages/nextjs-wordpress-plugin"
    },
    {
      "type": "path",
      "url": "../../packages/nextjs-wordpress-theme"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.2",
    "vlucas/phpdotenv": "^5.5",
    "nextjswp/nextjs-wordpress-plugin": "*",
    "nextjswp/nextjs-wordpress-theme": "*",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "6.1.1",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "wpackagist-plugin/add-wpgraphql-seo": "^4.0",
    "wpackagist-plugin/advanced-custom-fields": "^6.0",
    "wpackagist-plugin/debug-bar": "^1.1",
    "wpackagist-plugin/query-monitor": "^3.11",
    "wpackagist-plugin/wordpress-seo": "^19.0",
    "wpackagist-plugin/wp-graphql": "^1.0",
    "soberwp/intervention": "dev-main",
    "wp-graphql/wp-graphql-acf": "^0.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7.1",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
