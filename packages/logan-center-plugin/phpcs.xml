<?xml version="1.0"?>
<ruleset
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="Kleinweb"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

    <description>The Klein Digital Initiatives PHP coding standard.</description>

    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <rule ref="PSR12NeutronRuleset"/>

    <rule ref="SlevomatCodingStandard.TypeHints.PropertyTypeHint">
        <properties>
            <!-- We don't want to support unsupported versions of PHP. -->
            <property name="enableNativeTypeHint" value="true"/>
        </properties>
    </rule>

    <!-- Check for cross-version support for PHP 8.0 and higher. -->
    <config name="testVersion" value="8.0-"/>
</ruleset>
