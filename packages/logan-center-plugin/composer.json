{
  "name": "kleinweb/logan-center-plugin",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "description": "Minimally-functional WordPress plugin for the Logan Center for Urban Investigative Reporting",
  "homepage": "https://github.com/kleinweb/logan-center",
  "authors": [
    {
      "name": "Klein College of Media and Communication",
      "email": "kleinweb@temple.edu",
      "homepage": "https://klein.temple.edu"
    }
  ],
  "keywords": [
    "wordpress",
    "wordpress-plugin",
    "headless-wordpress",
    "temple-university"
  ],
  "support": {
    "issues": "https://github.com/kleinweb/logan-center/issues"
  },
  "require": {
    "php": "^8.0",
    "johnbillion/args": "^1.6",
    "johnbillion/extended-cpts": "^5.0",
    "vinkla/extended-acf": "^13.2"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "3.7.2",
    "kleinweb/kleinweb-php-standards": "*"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../../packages/kleinweb-php-standards"
    }
  ],
  "autoload": {
    "psr-4": {
      "Klein\\LoganCenter\\": "src/"
    },
    "files": [
      "lib/utils.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "lint": [
      "phpcs --standard=Kleinweb"
    ],
    "fix": [
      "phpcbf --standard=Kleinweb"
    ]
  }
}
