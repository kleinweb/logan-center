{
  "name": "kleinweb/logan-center",
  "description": "Logan Center for Urban Investigative Reporting",
  "version": "1.0.0",
  "homepage": "https://github.com/kleinweb/logan-center",
  "type": "app",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Klein College of Media and Communication",
      "email": "kleinweb@temple.edu"
    }
  ],
  "config": {
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "scripts": {
    "format": "./vendor/bin/phpcbf --standard=.phpcs.xml --report=summary,source",
    "lint": "./vendor/bin/phpcs --standard=.phpcs.xml --report=summary,source"
  }
}
