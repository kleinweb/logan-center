{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "copy": {
      "outputs": ["public/assets/**"]
    },
    "build": {
      "dependsOn": ["copy", "^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["**/*.tsx", "**/*.ts", "test/**/*.ts"]
    },
    "dev": {
      "dependsOn": ["copy"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "codegen": {
      "cache": false,
      "inputs": ["**/*.graphql", "**/*.tsx", "**/*.ts", "test/**/*.ts"],
      "outputs": ["graphql/generated/**", "gql/generated/**"],
      "dependsOn": [],
      "env": [
        "NEXT_PUBLIC_SERVER_URL",
        "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
        "NEXT_PUBLIC_WORDPRESS_ENDPOINT"
      ]
    },
    "codegen:watch": {
      "cache": false,
      "inputs": ["**/*.graphql", "**/*.tsx", "**/*.ts", "test/**/*.ts"],
      "outputs": ["graphql/generated/**", "gql/generated/**"],
      "dependsOn": [],
      "env": [
        "NEXT_PUBLIC_SERVER_URL",
        "NEXT_PUBLIC_GRAPHQL_ENDPOINT",
        "NEXT_PUBLIC_WORDPRESS_ENDPOINT"
      ]
    }
  }
}
