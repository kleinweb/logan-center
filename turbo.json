{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "copy": {
      "outputs": ["public/assets/**"]
    },
    "build": {
      "dependsOn": ["copy", "^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "api/**",
        "public/build/**"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["**/*.tsx", "**/*.ts", "test/**/*.ts"]
    },
    "dev": {
      "dependsOn": ["copy"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
